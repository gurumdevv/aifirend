<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5dc">

    <Button
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:backgroundTint="#EDEDD5"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="설 정  "
        android:drawableLeft="@drawable/set_resize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E6CF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/my_avatar_layout"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp" >

                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/chara_thumb" />
                    <ImageView
                        android:id="@+id/avatar_emotion_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alpha"/>

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="곰돌이"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/start_chat_voice_button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EDEDD5"
                    android:visibility="visible"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:text="음성 대화"
                    android:drawableLeft="@drawable/mic_resize" />

                <Button
                    android:id="@+id/start_chat_button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EDEDD5"
                    android:visibility="visible"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:text="채팅 대화"
                    android:drawableLeft="@drawable/talk_resize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>